### Settings from original zathurarc ###
set statusbar-h-padding 0
set statusbar-v-padding 0
map r reload
map i color
map W toggle_page_mode

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#e9b0a5'
set completion-bg '#101316'

# Command line completion group elements
set completion-group-fg '#8F5456'
set completion-group-bg '#101316'

# Current command line completion element
set completion-highlight-fg '#101316'
set completion-highlight-bg '#e9b0a5'

# Default foreground/background color
set default-bg rgba(16,19,22,1)

# Input bar
set inputbar-fg '#e9b0a5'
set inputbar-bg '#101316'

# Notification
set notification-fg '#e9b0a5'
set notification-bg '#101316'

# Error notification
set notification-error-fg '#e9b0a5'
set notification-error-bg '#87453C'

# Warning notification
set notification-warning-fg '#e9b0a5'
set notification-warning-bg '#87453C'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#e9b0a5'
set statusbar-bg '#101316'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#8F5456'
set highlight-active-color '#8F5456'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#e9b0a5'

# 'Loading...' text
set render-loading-fg '#e9b0a5'
set render-loading-bg '#101316'

# Index mode
set index-fg '#e9b0a5'
set index-bg '#101316'

# Selected element in index mode
set index-active-fg '#101316'
set index-active-bg '#e9b0a5'